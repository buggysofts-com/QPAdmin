<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dump_qicon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="@drawable/question_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/exam_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toStartOf="@id/exam_accessible"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/dump_qicon" />
    <ImageView
        android:id="@+id/exam_accessible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/exam_title"
        android:layout_alignBottom="@id/exam_title"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/exam_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/dump_qicon"
        android:layout_below="@id/exam_title"/>

    <TextView
        android:id="@+id/exam_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/dump_qicon"
        android:layout_below="@id/exam_id" />

    <TextView
        android:id="@+id/exam_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/dump_qicon"
        android:layout_below="@id/exam_password"/>


</RelativeLayout>